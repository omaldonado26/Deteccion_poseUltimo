<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/blue_dark"
        android:title="FisioApp"
        android:titleTextColor="#FFFFFF"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_baseline_menu_24" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginTop="?attr/actionBarSize">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_posture"
            android:contentDescription="Logo FisioApp"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a FisioApp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:layout_marginBottom="32dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_recomendaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recomendaciones"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            app:iconPadding="8dp"
            android:backgroundTint="@color/blue_dark"
            android:layout_marginBottom="16dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ejercicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicios"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            app:iconPadding="8dp"
            android:backgroundTint="@color/blue_dark"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacto del Fisioterapeuta"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            app:iconPadding="8dp"
            android:backgroundTint="@color/blue_dark" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
